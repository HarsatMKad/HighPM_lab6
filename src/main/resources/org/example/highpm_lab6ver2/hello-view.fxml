<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="367.0" prefWidth="318.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.highpm_lab6ver2.CanvasController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" prefHeight="29.0" prefWidth="272.0">
        <Button id="rectangleButton" mnemonicParsing="false" onAction="#onRectangleButtonClick" text="Прямоугольник"/>
        <Button id="circleButton" mnemonicParsing="false" onAction="#onCircleButtonClick" text="Круг"/>
    </HBox>

   <Pane fx:id="canvasPane" prefHeight="200.0" prefWidth="200.0" onMousePressed="#canvasMousePress" onMouseReleased="#canvasMouseUp" onMouseDragged="#canvasMouseMove" style="-fx-background-color: lightgrey;" />
</VBox>
